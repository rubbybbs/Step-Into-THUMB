/**index.wxss**/
@import '../../style/weui.wxss';

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.buttonBox {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  position: fixed;
  bottom: 100rpx;
}

.button {
  width: 35%;
}

.pageOne {
  background-image: url('https://i.postimg.cc/kMBp3jdg/bg1.png'); 
  background-size: cover;
  width: 100%; 
  height: 100%;
}

.pageTwo {
  background-image: url('https://i.postimg.cc/2jZtgq36/07c4fa76cd61932877837284a59d589.jpg'); 
